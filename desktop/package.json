{
  "name": "pdev-live",
  "version": "1.0.0",
  "description": "PDev Live - Real-time development session viewer",
  "main": "main.js",
  "author": "Dolov <dolov@dolov.dev>",
  "license": "MIT",
  "homepage": "https://walletsnack.com/pdev/live/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dolovegitlove/pdev-live.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.dolov.pdev-live",
    "productName": "PDev Live",
    "copyright": "Copyright 2025 Dolov",
    "asar": true,
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**",
      "assets/**",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "icon": "assets/icon.png",
      "category": "Development"
    },
    "publish": {
      "provider": "generic",
      "url": "https://walletsnack.com/pdev/releases/"
    }
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^26.0.0"
  },
  "dependencies": {
    "electron-log": "^5.0.0",
    "electron-prompt": "^1.7.0",
    "electron-updater": "^6.6.0"
  },
  "keywords": [],
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/dolovegitlove/pdev-live/issues"
  }
}
