# ===================================
# PDev-Live Partner Configuration
# ===================================

# Application Environment
NODE_ENV=production
PORT=3016

# ===================================
# PUBLIC URL (REQUIRED)
# ===================================
# Your public-facing domain (no trailing slash)
# This will be used for guest links and share URLs
PDEV_BASE_URL=https://PARTNER_DOMAIN

# ===================================
# STATIC FILE SERVING
# ===================================
# Enable Express.js to serve frontend HTML/CSS/JS files
# Set to 'true' for partner self-hosted deployments
# (walletsnack uses nginx, so this is 'false' there)
PDEV_SERVE_STATIC=true

# Frontend files directory
PDEV_FRONTEND_DIR=/opt/pdev-live/frontend

# ===================================
# HTTP BASIC AUTH (Backup Layer)
# ===================================
# Optional backup authentication (nginx auth is primary)
# Set to 'true' for defense-in-depth
PDEV_HTTP_AUTH=false

# If PDEV_HTTP_AUTH=true, set these:
PDEV_USERNAME=PARTNER_USERNAME
PDEV_PASSWORD=PARTNER_PASSWORD

# ===================================
# DATABASE CONFIGURATION
# ===================================
PDEV_DB_HOST=localhost
PDEV_DB_PORT=5432
PDEV_DB_NAME=pdev_live
PDEV_DB_USER=pdev_app
PDEV_DB_PASSWORD=GENERATED_DB_PASSWORD

# ===================================
# ADMIN API KEY
# ===================================
# Minimum 32 characters (generate with: openssl rand -base64 32)
PDEV_ADMIN_KEY=GENERATED_ADMIN_KEY
