# ===================================
# PDev-Live Installer Configuration Template
# ===================================
# This template is for creating INSTALLER instances (like vyxenai-installer)
# that run the installation wizard for deploying pdev-live to other servers.
#
# For production pdev-live instances, use .env.partner.template instead.

# Application Environment
NODE_ENV=production
PORT={{PORT}}

# ===================================
# PUBLIC URL (REQUIRED)
# ===================================
# Your public-facing domain (no trailing slash)
# Example: https://vyxenai.com/pdev
PDEV_BASE_URL={{PDEV_BASE_URL}}

# ===================================
# DATABASE CONFIGURATION
# ===================================
PDEV_DB_HOST={{DB_HOST}}
PDEV_DB_PORT={{DB_PORT}}
PDEV_DB_NAME={{DB_NAME}}
PDEV_DB_USER={{DB_USER}}
PDEV_DB_PASSWORD={{DB_PASSWORD}}

# ===================================
# ADMIN API KEY
# ===================================
# Minimum 32 characters (generate with: openssl rand -base64 32)
PDEV_ADMIN_KEY={{ADMIN_KEY}}

# ===================================
# HTTP BASIC AUTH (Optional)
# ===================================
# Set to 'true' to enable HTTP Basic Auth on installer endpoints
PDEV_HTTP_AUTH={{HTTP_AUTH:-false}}

# ===================================
# VALID SERVERS (CSV)
# ===================================
# List of servers that can install pdev-live
VALID_SERVERS={{VALID_SERVERS:-acme,ittz,cfree,djm,wdress,rmlve}}
